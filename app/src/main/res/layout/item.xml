<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_incidencia14"
        android:text="IA 14d"
        android:textSize="10sp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/item_incidencia14"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_incidencia14"
        android:text="14"
        android:textSize="20sp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_incidencia7"
        android:text="IA 7d "
        android:textSize="10sp"
        android:layout_below="@id/item_incidencia7"
        android:layout_toLeftOf="@id/text_incidencia14"
        android:layout_marginRight="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_incidencia7"
        android:text="7"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/item_incidencia14"
        android:layout_marginRight="80dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_id"
        android:text="Ay12M221Mww"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700"
        android:layout_below="@id/text_incidencia7"
        android:layout_marginTop="8dp" />

</RelativeLayout>